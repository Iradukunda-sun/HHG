doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Groceries
  link(rel='icon' href='/img/logo7.png')
  style.
    body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    }
    .container {
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
    }
    h2 {
    text-align: center;
    margin-bottom: 20px;
    color: #333;
    }
    .form-group {
    margin-bottom: 15px;
    }
    .form-group label {
    display: block;
    margin-bottom: 5px;
    color: #333;
    }
    .form-group input,
    .form-group select {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
    font-size: 16px;
    }
    .form-group select {
    height: 45px;
    }
    .btn {
    width: 100%;
    padding: 10px;
    background-color: #228B22;
    color: #fff;
    border: none;
    border-radius: 5px;
    font-size: 18px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    }
    .btn:hover {
    background-color: #1e7c1e;
    }
    p {
    text-align: center;
    margin-top: 20px;
    }
    p a {
    color: #228B22;
    text-decoration: none;
    }
    p a:hover {
    text-decoration: underline;
    }
.container
  h2 Sign Up
  form(action='/register' method='post')
    .form-group
      label(for='theName') Name
      input#theName(type='text' name='theName')
    .form-group
      label(for='email') Email
      input#email(type='email' name='email')
    .form-group
      label(for='mobileNumber') Mobile Number
      input#mobile(type='number' name='mobileNumber')
    .form-group
      label(for='password') Password
      input#password(type='password' name='password' required='')
    .form-group
      label(for='branch') Branch
      select#branch(name='branch')
        option(value='matugga') Matugga
        option(value='maganjo') Maganjo
    .form-group
      label(for='role') Role
      select#role(name='role' required='')
        option(value='manager') Manager
        option(value='salesagent') Sales Agent
    .form-group
      button.btn(type='submit') Sign Up
  p
    | Already have an account? 
    a(href='/login') log In
