doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Groceries
  style.
    .receipt-container {
    width: 800px;
    margin: 40px auto;
    padding: 20px;
    border: 1px solid #ccc;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .header-section {
    background-color: #f0f0f0;
    padding: 10px;
    border-bottom: 1px solid #ccc;
    }
    .header-section h1 {
    font-size: 24px;
    margin-bottom: 10px;
    text-align: center;
    }
    .header-section img {
    width: 100px;
    height: 100px;
    margin: 10px;
    }
    .sale-details-section {
    padding: 10px;
    border-bottom: 1px solid #ccc;
    }
    .customer-details-section {
    padding: 10px;
    border-bottom: 1px solid #ccc;
    }
    .itemized-list-section {
    padding: 10px;
    border-bottom: 1px solid #ccc;
    }
    #itemized-list-table {
    width: 100%;
    border-collapse: collapse;
    }
    #itemized-list-table th, #itemized-list-table td {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: left;
    }
    .summary-section {
    padding: 10px;
    border-bottom: 1px solid #ccc;
    }
    .payment-details-section {
    padding: 10px;
    border-bottom: 1px solid #ccc;
    }
    .footer-section {
    padding: 10px;
    background-color: #f0f0f0;
    border-top: 1px solid
    }
.receipt-container
  // Header Section
  .header-section
    h1 Happy Hoe Grocery.
    img(src='logo.png' alt='Company Logo')
    p
      | Branch Name: 
      span#branch-name
    p
      | Address: 
      span#branch-address
    p
      | Contact Info: 
      span#branch-contact
  // Sale Details Section
  .sale-details-section
    p
      | Receipt Number: 
      span#receipt-number
    p
      | Date and Time: 
      span#date-time
    p
      | Sales Agent: 
      span#sales-agent
  // Customer Details Section
  .customer-details-section
    p
      | Customer Name: 
      span#customer-name
    p
      | Customer Contact: 
      span#customer-contact
  // Itemized List Section
  .itemized-list-section
    table#itemized-list-table
      thead
        tr
          th Produce Name
          th Type
          th Quantity
          th Unit Price
          th Total Price
      tbody#itemized-list-body
  // Summary Section
  .summary-section
    p
      | Subtotal: 
      span#subtotal
    p
      | Tax: 
      span#tax
    p
      | Discounts: 
      span#discounts
    p
      | Total Amount: 
      span#total-amount
  // Payment Details Section
  .payment-details-section
    p
      | Payment Method: 
      span#payment-method
    p
      | Amount Paid: 
      span#amount-paid
    p
      | Change Due: 
      span#change-due
  // Footer Section
  .footer-section
    p Thank you for shopping with us!
    p Return policy: Returns accepted within 7 days.
    p Signature: ______________________________________
