doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Groceries
  link(rel='stylesheet' href='/bootstrap-5.3.3-dist/bootstrap-5.3.3-dist/css/bootstrap.css')
  link(rel='icon' href='/img/logo7.png')
  style.
    body {
    background-image: url(/img/landing2.png);
    background-repeat: no-repeat;
    background-position: center;
    background-attachment: fixed;
    background-size: cover;
    }
    form {
    width: 70%;
    margin: 40px auto;
    padding: 20px;
    border: 1px solid #161515;
    border-radius: 10px;
    box-shadow: none;
    background-color: #f0eaf1;
    }
    table {
    width: 100%;
    }
    th,
    td {
    padding: 10px;
    border-bottom: 1px solid #ccc;
    }
    th {
    background-color: #a5f5a3;
    }
    input[type="text"],
    input[type="number"],
    input[type="date"] {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #ccc;
    }
    button[type="submit"],
    button[type="reset"] {
    padding: 10px 30px;
    margin: 20px 20px;
    border: none;
    border-radius: 10px;
    background-color: #572150;
    color: #fff;
    cursor: pointer;
    }
    button[type="submit"]:hover,
    button[type="reset"]:hover {
    background-color: #3e8e41;
    }
    h2 {
    text-align: center;
    }
