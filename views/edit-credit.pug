form(action='/updateCredit?id='+credit._id method='POST' name= 'editCredit' )
  h2  CREDIT SALES
  table
    tr
      td Buyer&apos;s Name:
      td
        input#buyersName(type='text' name='buyersName' value = credit.buyersName) 
    br
    tr
      td National Identification Number:
      td
        input#niN(type='text' name='niN' value = credit.niN) 
    tr
      td Location:
      td
        input#location(type='text' name='location' value = credit.location)
    tr
      td Contact Info:
      td
        input#contactInfo(type='text' name='contactInfo' value = credit.contactInfo) 
    tr
      td Amount Due:
      td
        input#amountDue(type='number' name='amountDue' value = credit.amountDue) 
    tr
      td  Sales Agent&apos;s Name:
      td
        input#salesAgentName(type='text' name='salesAgentName' value = credit.salesAgentName)
    tr
      td Due Date:
      td
        input#dueDate(type='date' name='dueDate' value = credit.dueDate)
    tr
      select.form-select(aria-label='Default select example' type='text' name='cropName')
        option(selected='') Select Product
        option(value='beans' selected = credit.cropName === "beans") Beans
        option(value='maize' selected = credit.cropName === "maize") Maize
        option(value='cow-peas' selected = credit.cropName === "cow-peas") Cow peas
        option(value='g-nuts' selected = credit.cropName === "g-nuts") G-nuts
        option(value='rice' selected = credit.cropName === "rice") Rice
        option(value='soy' selected = credit.cropName === "soy") Soy beans
    tr
      select.form-select(aria-label='Default select example' type='text' name='Type')
        option(selected='') Select Type
        option(value='grain') Grain
        option(value='legume') Legume
    tr
      td Tonnage:
      td
        input#number(type='number' name='tonnage' value = credit.tonnage) 
    tr
      td  Date of Dispatch:
      td
        input#date(type='date' name='date')
  button#save_button(type='submit') Update
  button#cancel_button(type='reset') Cancel
script(src='/bootstrap-5.3.3-dist/bootstrap-5.3.3-dist/js/bootstrap.js')
