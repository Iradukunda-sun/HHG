doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Groceries
  style.
    table {
    border-collapse: collapse;
    width: 100%;
    }
    th, td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
    }
    tr.low-stock {
    background-color: #ffcccc;
    }
    h1 {
    text-align: center;
    font-size: 24px;
    font-weight: bold;
    }
h1 View Stock
table#stock-table(action="stock")
  thead
    tr
      th Produce Name
      th Date
      th Current Stock (Tons)
      th Cost
      th Branch Name
      th Action
  tbody
      if produces.length 
      each produce in produces 
        tr 
          td #{produce.cropName}
          td #{produce.date}
          td #{produce.tonnage}
          td #{produce.cost}
          td #{produce.branch_name}

          td 
            form(method ="post" action = '/deleteProduce') 
              input(type="hidden", placeholder="", name="id", value=produce._id)
              button#delete_button(type='submit') Delete 
      else 
          p No produce yet 

