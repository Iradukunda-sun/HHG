doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Groceries
  link(rel='icon' href='/img/logo7.png')
  style.
    css
    .stock-page {
    max-width: 800px;
    margin: 40px auto;
    padding: 20px;
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .card-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 20px;
    }
    .card {
    background-color: #fff;
    padding: 20px;
    border: 1px solid #ddd;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    transition: background-color 0.3s ease;
    }
    .card h2 {
    margin-top: 0;
    }
    .card p {
    font-size: 18px;
    font-weight: bold;
    color: #666;
    }
     #back-button {
    background-color: transparent;
    border: none;
    padding: 8px;
    cursor: pointer;
    }

    #back-button svg {
      transition: transform 0.2s ease-in-out;
    }

    #back-button:hover svg {
      transform: translateX(-2px);
    }
    h1 {
    text-align: center;
    }
.stock-page
  button#back-button(title='Go back')
    svg(width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2')
      path(d='M15 19l-7-7 7-7')

  h1  AVAILABLE STOCK
  .card-grid
    .card
      h2 Beans
      img(src='/img/redbeans.png' alt='redbeans')
      p Current Stock: #{new Intl.NumberFormat().format(totalbeans.stockQuantity - soldBeans)} Kg
    .card
      h2 Maize
      img(src='/img/maize.png' alt='maize')
      p Current Stock: #{new Intl.NumberFormat().format(totalmaize.stockQuantity)} Kg
    .card
      h2 Rice
      img(src='/img/rice.png' alt='rice')
      p Current Stock: #{new Intl.NumberFormat().format(totalrice.stockQuantity)} Kg
    .card
      h2 Soybeans
      img(src='/img/soy.png' alt='soybeans')
      p Current Stock: #{new Intl.NumberFormat().format(totalsoy.stockQuantity)} Kg
    .card
      h2 Cow Peas
      img(src='/img/cowpeas.png' alt='cowpeas')
      p Current Stock: #{new Intl.NumberFormat().format(totalcowpeas.stockQuantity)} Kg
    .card
      h2 Gnuts
      img(src='/img/g-nuts.png' alt='gnuts')
