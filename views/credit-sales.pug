  svg(width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2')
    path(d='M15 19l-7-7 7-7') 
form(action='/credit' method='post')
  h2 ADD CREDIT SALE
  table
    tr
      td Buyer&apos;s Name:
      td
        input#buyersName(type='text' name='buyersName')
    br
    tr
      td National Identification Number:
      td
        input#niN(type='text' name='niN')
    tr
      td Location:
      td
        input#location(type='text' name='location')
    tr
      td Contact Info:
      td
        input#contactInfo(type='text' name='contactInfo')
    tr
      td Amount Due:
      td
        input#amountDue(type='number' name='amountDue')
    tr
      td  Sales Agent&apos;s Name:
      td
        input#salesAgentName(type='text' name='salesAgentName')
    tr
      td Due Date:
      td
        input#dueDate(type='date' name='dueDate')
    tr
      select.form-select(aria-label='Default select example' type='text' name='cropName')
        option(selected='') Select Product
        option(value='beans' type='text' name='cropName') Beans
        option(value='maize'  type='text' name='cropName') Maize
        option(value='cow-peas'  type='text' name='cropName') Cow peas
        option(value='g-nuts'  type='text' name='cropName') G-nuts
        option(value='rice'  type='text' name='cropName') Rice
        option(value='soy'  type='text' name='cropName') Soy beans
    tr
      select.form-select(aria-label='Default select example' type='text' name='Type')
        option(selected='') Select Type
        option(value='grain' type='text' name='Type') Grain
        option(value='legume' type='text' name='Type') Legume
    tr
      td Tonnage (tons):
      td
        input#number(type='number' name='tonnage')
    tr
      td  Date of Dispatch:
      td
        input#date(type='date' name='date')
  button#save_button(type='submit') Save
  a(href='/creditList')
  button#cancel_button(type='reset') Cancel
script(src='/bootstrap-5.3.3-dist/bootstrap-5.3.3-dist/js/bootstrap.js')
