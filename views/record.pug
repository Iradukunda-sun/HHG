doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title HHG
  link(rel='stylesheet' href='/bootstrap-5.3.3-dist/bootstrap-5.3.3-dist/css/bootstrap.css')
  link(rel='icon' href='/img/logo7.png')
  style.
    table {
    border-collapse: collapse;
    width: 100%;
    }
    th, td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
    }
    tr.low-stock {
    background-color: #ffcccc;
    }
    h1 {
    text-align: center;
    font-size: 24px;
    font-weight: bold;
    }
    button[type="submit"] {
    padding: 10px 30px;
    /* margin: 20px 20px; */
    border: none;
    border-radius: 10px;
    background-color: #572150;
    color: #fff;
    cursor: pointer;
    }
    #update-button{
    padding: 10px 30px;
    /* margin: 20px 20px; */
    border: none;
    border-radius: 10px;
    background-color: #572150;
    color: #fff;
    cursor: pointer;
    }
    #back-button {
    background-color: transparent;
    border: none;
    padding: 8px;
    cursor: pointer;
    }

    #back-button svg {
      transition: transform 0.2s ease-in-out;
    }

    #back-button:hover svg {
      transform: translateX(-2px);
    }
  nav.navbar.navbar-expand-lg.bg-body-tertiary
    .container-fluid
      a.navbar-brand(href='#')
        strong HAPPY HOE GROCERIES
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav
          //- li.nav-item
          //-   a.nav-link.active(aria-current='page' href='/dashboard1') Dashboard
          li.nav-item
            a.nav-link(href='/stock')  Stock Status
          //- li.nav-item
          //-   a.nav-link(href='/salesList')  Sales Records
          li.nav-item
            a.nav-link(href='/landing')  Log out
          
button#back-button(title='Go back')
  svg(width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2')
    path(d='M15 19l-7-7 7-7')         
h1 Procurement
table#stock-table(action="stock")
  thead
    tr
      th Produce Name
      th Date
      th Tonnage (tons)
      th Cost
      th Branch Name
      th Action
      th Delete
     
  tbody
      if produces.length 
      each produce in produces 
        tr 
          td #{produce.cropName}
          td #{produce.date}
          td #{produce.tonnage}
          td #{produce.cost}
          td #{produce.branch_name}
          td 
            a#update-button(href='/updateProduce/'+produce._id) Edit 
          td
            form(method ="post" action = '/deleteProduce') 
              input(type="hidden", placeholder="", name="id", value=produce._id)
              button#delete_button(type='submit') Delete 
      else 
          p No produce yet 
script(src='/bootstrap-5.3.3-dist/bootstrap-5.3.3-dist/js/bootstrap.js')
script(src='/js/stock.js')

