doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title HHG
  link(rel='stylesheet' href='/bootstrap-5.3.3-dist/bootstrap-5.3.3-dist/css/bootstrap.css')
  link(rel='icon' href='/img/logo7.png')
  style.
    table {
    border-collapse: collapse;
    width: 100%;
    }
    th, td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
    }
    tr.low-stock {
    background-color: #ffcccc;
    }
    h1 {
    text-align: center;
    font-size: 24px;
    font-weight: bold;
    }
    button[type="submit"] {
    padding: 10px 30px;
    /* margin: 20px 20px; */
    border: none;
    border-radius: 10px;
    background-color: #572150;
    color: #fff;
    cursor: pointer;
    }
    #update-button{
    padding: 10px 30px;
    /* margin: 20px 20px; */
    border: none;
    border-radius: 10px;
    background-color: #572150;
    color: #fff;
    cursor: pointer;
    }
    #back-button {
    background-color: transparent;
    border: none;
    padding: 8px;
    cursor: pointer;
    }

    #back-button svg {
      transition: transform 0.2s ease-in-out;
    }

    #back-button:hover svg {
      transform: translateX(-2px);
    }
  nav.navbar.navbar-expand-lg.bg-body-tertiary
    .container-fluid
      a.navbar-brand(href='#')
        strong HAPPY HOE GROCERIES
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item
            a.nav-link.active(aria-current='page' href='/dashboard1') Dashboard
          li.nav-item
            a.nav-link(href='/stock')  Stock Status
          //
            <li class="nav-item">
            <a class="nav-link" href="#">Pricing</a>
          //
            </li>
            <li class="nav-item">
            <a class="nav-link disabled" aria-disabled="true">Disabled</a>
            </li>
button#back-button(title='Go back')
  svg(width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2')
    path(d='M15 19l-7-7 7-7')
h1 Sales records
table#stock-table(action="stock")
  thead
    tr
      th Produce Name
      th Date
      th Agent Name
      th Tonnage (tons)
      th Action
      th Delete
      th Generate
  tbody
      if sales.length 
      each sale in sales 
        tr 
          td #{sale.cropName}
          td #{sale.date}
          td #{sale.agentName}
          td #{sale.tonnage}
          td 
            a#update-button(href='/updateSale/'+sale._id) Edit
          td 
            form(method ="post" action = '/deleteSale') 
              input(type="hidden", placeholder="", name="id", value=sale._id)
              button#delete_button(type='submit') Delete 
          td 
            a#update-button(href='/hhgreceipt/'+sale._id) Receipt 
      else 
          p No sale yet 
script(src='/bootstrap-5.3.3-dist/bootstrap-5.3.3-dist/js/bootstrap.js')
script(src='/js/stock.js')


