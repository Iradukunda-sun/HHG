doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Groceries
  link(rel='icon' href='/img/logo7.png')
  style.
    body {
    background-image: url(/img/landing2.png);
    background-repeat: no-repeat;
    background-position: center;
    background-attachment: fixed;
    background-size: cover;
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
    }
    .container {
    width: 500px;
    height: 500px;
    margin: 40px auto;
    padding: 20px;
    background-color: #fff;
    border: 1px solid #ddd;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    }
    form {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    }
    label {
    margin-bottom: 10px;
    }
    input[type="email"],
    input[type="password"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 20px;
    border: 1px solid #ccc;
    }
    input[type="submit"] {
    background-color: #532a5e;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    }
    input[type="submit"]:hover {
    background-color: #3e8e41;
    }
    #error-message {
    color: red;
    font-size: 14px;
    margin-top: 10px;
    }
    h1 {
    color: #032e3b;
    text-align: center;
    margin-bottom: 20px;
    font-size: 40px;
    font-weight: bold;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }
    p {
      color: #532a5e;
      text-align: center;
      margin-top: 20px;
      font-size: 18px;
    }
    .buttons {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    }
    .btn {
    text-decoration: none;
    color: #fff;
    background-color: #228B22;
    padding: 10px 20px;
    border-radius: 5px;
    margin-left: 10px;
    transition: background-color 0.3s ease;
    }
    .btn:hover {
    background-color: #1e7c1e;
    }
