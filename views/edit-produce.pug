doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title HHG
  link(rel='stylesheet' href='/bootstrap-5.3.3-dist/bootstrap-5.3.3-dist/css/bootstrap.css')
  link(rel='icon' href='/img/logo7.png')
  style.
    body {
    background-image: url(/img/landing2.png);
    background-repeat: no-repeat;
    background-position: center;
    background-attachment: fixed;
    background-size: cover;
    }
    form {
    width: 70%;
    margin: 40px auto;
    padding: 20px;
    border: 1px solid #161515;
    border-radius: 10px;
    box-shadow: none;
    background-color: #f0eaf1;
    }
    table {
    width: 100%;
    }
    th,
    td {
    padding: 10px;
    border-bottom: 1px solid #ccc;
    }
    th {
    background-color: #a5f5a3;
    }
    input[type="text"],
    input[type="number"],
    input[type="date"] {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #ccc;
    }
    button[type="submit"],
    button[type="reset"] {
    padding: 10px 30px;
    margin: 20px 20px;
    border: none;
    border-radius: 10px;
    background-color: #572150;
    color: #fff;
    cursor: pointer;
    }
    button[type="submit"]:hover,
    button[type="reset"]:hover {
    background-color: #3e8e41;
    }
    #back-button {
    background-color: transparent;
    border: none;
    padding: 8px;
    cursor: pointer;
    }

    #back-button svg {
      transition: transform 0.2s ease-in-out;
    }

    #back-button:hover svg {
      transform: translateX(-2px);
    }
    h2 {
    text-align: center;
    }
nav.navbar.navbar-expand-lg.bg-body-tertiary
  .container-fluid
    a.navbar-brand(href='#')
      strong HAPPY HOE GROCERIES
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav
        li.nav-item
          a.nav-link.active(aria-current='page' href='/produceList') Procurement Records
        li.nav-item
          a.nav-link(href='#')  Stock Status
        //
          <li class="nav-item">
          <a class="nav-link" href="#">Pricing</a>
        //
          </li>
          <li class="nav-item">
          <a class="nav-link disabled" aria-disabled="true">Disabled</a>
          </li>
button#back-button(title='Go back')
  svg(width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2')
    path(d='M15 19l-7-7 7-7')         
form(action='/updateProduce?id='+produce._id method='POST' name= 'editProduce' )
  h2 PROCUREMENT RECORDS
  br
  table
    tr
      select.form-select(aria-label='Default select example')
        option(selected='') Select  Name
        option(value='beans' selected = produce.cropName === "beans") Beans
        option(value='maize' selected = produce.cropName === "maize") Maize
        option(value='cow-peas' selected = produce.cropName === "cow-peas") Cow peas
        option(value='g-nuts' selected = produce.cropName === "g-nuts") G-nuts
        option(value='rice' selected = produce.cropName === "rice") Rice
        option(value='soy' selected = produce.cropName === "soy") Soy beans
      //
        <td>Produce Name:</td>
        <td><input type="text" id="produce_name" name="produce_name" required></td>
    br
    tr
      select.form-select(aria-label='Default select example' type='text' name='Type')
        option(selected='') Select Type
        option(value='grain' selected = credit.Type === "grain") Grain
        option(value='legume' selected = credit.Type === "legume") Legume
    tr
      td Date:
      td
        input#date(type='date' name='date' value = produce.date )
    tr
      td Tonnage (tons):
      td
        input#tonnage(type='number' name='tonnage' value = produce.tonnage )
    tr
      td Cost  (UGX):
      td
        input#cost(type='number' name='cost' value = produce.cost )
    tr
      td Dealer&apos;s Name:
      td
        input#dealers_name(type='text' name='dealers_name'  value = produce.dealers_name )
    tr
      select.form-select(aria-label='Default select example')
        option(selected='') Select Branch
        option(value='maganjo' selected = produce.branch_name === maganjo) Maganjo
        option(value='legume' selected = produce.branch_name === matugga) Matugga

      
    tr
      td Contact Info:
      td
        input#contact_info(type='text' name='contact_info'  value = produce.contact_info )
    tr
      td Price to be sold at (UGX):
      td
        input#saleprice(type='number' name='saleprice'  value = produce.saleprice )
        
  button#save_button(type='submit') Update

  a(href='#')
    button#cancel_button(type='reset') Cancel
script(src='/bootstrap-5.3.3-dist/bootstrap-5.3.3-dist/js/bootstrap.js')
